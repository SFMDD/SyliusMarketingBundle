{% macro impression_data(id, name, brand = null, category = null, list_position = null, price = null, variant = null, list_name = null, quantity = null) %}
    {
    "id": {{ id }},
    "name": '{{ name }}',
    {% if list_name is not null %}
    "list_name": '{{ list_name }}',
    {% endif %}
    {% if brand is not null %}
    "brand": '{{ brand }}',
    {% endif %}
    {% if category is not null %}
    "category": '{{ category }}',
    {% endif %}
    {% if variant is not null %}
    "variant": '{{ variant }}',
    {% endif %}
    {% if list_position is not null %}
    "list_position": {{ list_position }},
    {% endif %}
    {% if price is not null %}
    "price": {{ price }}
    {% endif %}
    {% if quantity is not null %}
        "quantity": {{ quantity }}
    {% endif %}
    }
{% endmacro %}

