{% if instagramPosts is not empty %}
    <div class="container">
        <div class="row">
            <div class=" col-lg-offset-3 col-md-offset-3 col-sm-offset-2 col-xs-offset-1 col-lg-6 col-md-6 col-sm-8 col-xs-10">
                <p style="color: #3E3E3F;font-size: 26pt;" class="double-underline rubik uppercase text-center">Instagram</p>
            </div>
        </div>
        <div class="row" style="margin-top: 5vh">
            {% for post in instagramPosts %}
                {% set html = provider.display(post).html %}
                {% if html is not empty %}
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        {{ html|raw }}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endif %}
