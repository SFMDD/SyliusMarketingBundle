{% if instagramPosts is not empty %}
    <div class="container">
        <div class="row">
            <div class=" col-lg-offset-3 col-md-offset-3 col-sm-offset-2 col-xs-offset-1 col-lg-6 col-md-6 col-sm-8 col-xs-10">
                <p style="color: #3E3E3F;font-size: 26pt;" class="double-underline rubik uppercase text-center">Instagram</p>
            </div>
        </div>
        <div class="row" style="margin-top: 5vh">
            {% for post in instagramPosts %}
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 mb-15">
                    <div class="instagram-section__wrapper">
                        <div class="single-service-item">
                            <div class="img-full service-img">
                                <a href="{{ post.link }}" rel="nofollow noreferrer noopener" target="_blank">
                                    <img alt="Intagram MC Pro-Tech {{ post.content }}" title="Intagram MC Pro-Tech {{ post.content }}" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"
                                         data-defer-src="{{ post.imageMedium }}">
                                </a>
                            </div>
                        </div>
                        <div class="instagram-section__meta" style="padding: 10px;">
                            <div class="instagram-section__likes">{{ post.likes }} likes</div>
                            <div class="instagram-section__caption"><strong>{{ post.author }}</strong>
                                {{ post.content }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}