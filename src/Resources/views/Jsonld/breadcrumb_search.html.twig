{#BREADCRUMB#}
{% set search_term = settings.attr.search_term|escape|raw %}

<script type="application/ld+json">
    {
    "@context": "http://schema.org/",
    "@type": "BreadcrumbList",
        "itemListElement": [
            {
                "@type": "ListItem",
                "position": "1",
                "item": {
                        "@id": "{{ absolute_url(path('sylius_shop_homepage')) }}",
                        "name": "{{ "sylius.ui.home"|trans }}"
                        }
            },
            {
            "@type": "ListItem",
            "position": "2",
                "item": {
                "@id": "{{ path('route_search', {'_locale': app.request.locale, 'search_term': search_term}) }}",
                "name": "{{ "sylius.ui.home"|trans }}"
                }
            }
         ]
    }
</script>
