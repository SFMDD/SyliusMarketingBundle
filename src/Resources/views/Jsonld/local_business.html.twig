{#LOCAL BUSINESS#}
<script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "{{ sylius.channel.googleTypeMerchant }}",
            "name": "{{ sylius.channel.name|capitalize }}",
            "image": "{{ absolute_url(path('sylius_shop_homepage')) }}assets/themes/{{ sylius.channel.name|lower }}/img/logo.png",
            "@id": "{{ sylius.channel.googleId }}",
            "url": "{{ absolute_url(path('sylius_shop_homepage')) }}",
            "telephone": "{{ sylius.channel.contactPhone }}",
            "priceRange": "0",
            "address": {
                "@type": "PostalAddress",
                "streetAddress": "{{ sylius.channel.shopBillingData.street|escape|raw }}",
                "addressLocality": "{{ sylius.channel.shopBillingData.city|escape|raw }}",
                "postalCode": "{{ sylius.channel.shopBillingData.postcode|escape|raw }}",
                "addressCountry": "FR"
            },{% set contactGeoLatitudeLongitude = sylius.channel.contactGeoLatitudeLongitudeArray %}
            {% if contactGeoLatitudeLongitude[0]|trim is not empty and contactGeoLatitudeLongitude[1]|trim is not empty %}
            "geo": {
                "@type": "GeoCoordinates",
                "latitude": "{{ contactGeoLatitudeLongitude[0] }}",
                "longitude": "{{ contactGeoLatitudeLongitude[1] }}"
            },
            {% endif %}
            {% set contactGeoOpeningHours = sylius.channel.contactGeoOpeningHoursArray %}
            {% if contactGeoOpeningHours[0]|length > 0 %}
            "openingHoursSpecification": {
                "@type": "OpeningHoursSpecification",
                "dayOfWeek": {{ contactGeoOpeningHours[0]|json_encode|raw }},
                "opens": "{{ contactGeoOpeningHours[1][0] }}",
                "closes": "{{ contactGeoOpeningHours[1][1] }}"
            },
            {% endif %}
            "sameAs": [
                {% if sylius.channel.urlFacebook is not empty %}
                "{{ sylius.channel.urlFacebook }}",
                {% endif %}
                "{{ absolute_url(path('sylius_shop_homepage')) }}"
            ]
        }
</script>
