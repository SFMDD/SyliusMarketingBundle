{% import "@FMDDSyliusMarketingPlugin/Include/marketing_macro.html.twig" as marketing %}
{% set product = settings.product %}
<script>
    tarteaucitron.user.gtagMore = function () {
        gtag('event', 'view_item', {
            "items": [
                    {{ marketing.impression_data(product.id, product.name,
                        sylius.channel.name|capitalize, product.mainTaxon, 1, null,
                    null, "product_show") }}
                {#{{ marketing.impression_data(product.id, product.name,
                        sylius.channel.name|capitalize, product.mainTaxon, 1, (product|sylius_resolve_variant|sylius_calculate_price({'channel': sylius.channel})/100)|round(0, 'common'),
                    null, "product_show") }}#}
            ]
        });

        function gtag_report_conversion(url) {
            var callback = function () {
                if (typeof(url) != 'undefined') {
                    window.location = url;
                }
            };


            {% set google_adwords = sylius.channel.googleAdwords %}
            {% set google_event_product_show = sylius.channel.googleEventProductShow %}
            {% if google_adwords is not empty and google_event_product_show is not empty  %}
                gtag('event', 'conversion', {
                    'send_to': '{{ google_adwords }}/{{ google_event_product_show }}',
                    'event_callback': callback
                });
            {% endif %}
            return false;
        }
    };
    (tarteaucitron.job = tarteaucitron.job || []).push('gtag');
</script>
