{% spaceless %}
<style>
    #notify{
        position: fixed;
        z-index: 1000;
        display: flex;
        align-items: center;
        padding: 20px;
        color: #fff;
        line-height: 1.3;
        max-width: 400px;
        margin: 20px;
        overflow: hidden;
        -webkit-box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
        -moz-box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
        -o-box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
        visibility: hidden;
        opacity: 0;
        background-color: #ffffff;
        border-radius: 5px;
    }
    @-webkit-keyframes fade-in {
        from {
            visibility: hidden;
            opacity: 0;
        }
        to {
            visibility: visible;
            opacity: 1;
        }
    }
    @keyframes fade-in {
        from {
            visibility: hidden;
            opacity: 0;
        }
        to {
            visibility: visible;
            opacity: 1;
        }
    }
    .do-show {
        animation: fade-in 2s ease-in-out forwards, fade-in 8s ease-in-out reverse forwards;
        -webkit-animation: fade-in 2s ease-in-out forwards, fade-in 8s ease-in-out reverse forwards;
        -moz-animation: fade-in 2s ease-in-out forwards, fade-in 8s ease-in-out reverse forwards;
        -o-animation: fade-in 2s ease-in-out forwards, fade-in 8s ease-in-out reverse forwards;
        -ms-animation: fade-in 2s ease-in-out forwards, fade-in 8s ease-in-out reverse forwards;
    }
    .bottom-left {
        bottom: 0;
        left: 0;
    }
    #notify img {
        width: 50px; height: 50px;
    }
    #notify div {
        font-size: 14px;
    }
    #notify div .title {
        font-size: 16px!important;
        color: black;
    }
    #notify div .content {
        color: gray;
        margin-top: 5px;
    }
    #notify div .content span {
        color: black;
    }
    #notify div .date {
        color: #aaaaaa;
    }
    #notify iframe {
        margin: 0
    }
</style>
{% endspaceless %}
