<style>
    #notify{
        position: fixed;
        z-index: 1000;
        display: flex;
        align-items: center;
        padding: 20px;
        color: #fff;
        line-height: 1.3;
        max-width: 400px;
        margin: 20px;
        overflow: hidden;
        -webkit-box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
        -moz-box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
        -o-box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
        visibility: hidden;
        opacity: 0;
        background-color: #ffffff;
        border-radius: 5px;
    }
    @-webkit-keyframes fade-in {
        from {
            visibility: hidden;
            opacity: 0;
        }
        to {
            visibility: visible;
            opacity: 1;
        }
    }
    @keyframes fade-in {
        from {
            visibility: hidden;
            opacity: 0;
        }
        to {
            visibility: visible;
            opacity: 1;
        }
    }
    .do-show {
        animation: fade-in 2s ease-in-out forwards, fade-in 8s ease-in-out reverse forwards;
        -webkit-animation: fade-in 2s ease-in-out forwards, fade-in 8s ease-in-out reverse forwards;
        -moz-animation: fade-in 2s ease-in-out forwards, fade-in 8s ease-in-out reverse forwards;
        -o-animation: fade-in 2s ease-in-out forwards, fade-in 8s ease-in-out reverse forwards;
        -ms-animation: fade-in 2s ease-in-out forwards, fade-in 8s ease-in-out reverse forwards;
    }
    .bottom-left {
        bottom: 0;
        left: 0;
    }
    #notify img {
        width: 50px; height: 50px;
    }
    #notify div {
        font-size: 14px;margin-left: 15px;
    }
    #notify div .title {
        font-size: 16px!important;
        color: black;
    }
    #notify div .content {
        color: gray;
    }
    #notify div .content span {
        color: black;
    }
    #notify div .date {
        color: #aaaaaa;
    }
</style>
<script>
    let route = '{{ absolute_url(path('fmdd_product_redirect', {'code': '_code_'})) }}';
    setInterval(randomNotification, 15000);
    function randomNotification() {
        $.ajax({
            type: "GET",
            url: "{{ path('fmdd_notification_random') }}",
            dataType: "json",
            success: function (msg) {
                sendNotification(msg.notification, msg.error);
            }
        });
    }
    function sendNotification(notification, error){
        if(error) return;
        let element = $('#notify')
        if(element.length) element.remove();

        if(notification.type === "purchase") {
            $('body').append(`
                    <a id="notify" data-id="${notification.options.product_id}" data-name="${notification.options.product_name}" class="do-show bottom-left gtm-eh-track-product-click" href="${route.replace('_code_', notification.options.product_code)}">
                        <img src="${notification.options.product_image.replace('http://localhost', location.protocol + '//' +location.hostname)}" alt="${notification.options.product_name}">
                        <div>
                            <div class="title"><b>${notification.options.firstname}</b> (${notification.options.city}, ${notification.options.country})</div>
                            <div class="content">A achet√© <span>${notification.options.quantity === 1 ? '' : notification.options.quantity} ${notification.options.product_name}</span></div>
                            <div class="date">${notification.created_at}</div>
                        </div>
                    </a>`);
        }
    }
</script>
